<Window x:Class="visitSkive.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:visitSkive"
        mc:Ignorable="d"

        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Height="60" Margin="274,30,0,0" VerticalAlignment="Top" Width="234" FontSize="36" HorizontalContentAlignment="Center"/>
        <Label Content="Username:" HorizontalAlignment="Left" Height="32" Margin="180,100,0,0" VerticalAlignment="Top" Width="399" FontSize="18"/>
        <TextBox Name="User" HorizontalAlignment="Left" Height="40" Margin="180,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="443"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="37" Margin="180,210,0,0" VerticalAlignment="Top" Width="443" FontSize="18" RenderTransformOrigin="0.5,0.5">

        </Label>
        <TextBox Name="PassWord" HorizontalAlignment="Left" Height="41" Margin="180,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="443"/>
        <Button Name="Enter" Click="Login_Click" Content="Login" HorizontalAlignment="Left" Height="39" Margin="274,330,0,0" VerticalAlignment="Top" Width="269" FontSize="18"/>
    </Grid>
</Window>